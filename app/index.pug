        section.selection-block
          .divider
            div
              img(src="img/logo-dividers.png", alt="")
          h2.title #Горячая подборка
          .selection
            .selection__item
              .item__inner
                img(src="img/selection/img/img-1.png", alt="")
                h3 Утренние рецепты
            .selection__item
